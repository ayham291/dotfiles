#!/bin/sh

CPU=$(sensors | awk '/CPU/ {print $2}' | sed 's/+//' | sed 's/C$//')
GPU=$(sensors | awk '/GPU/ {print $2}' | sed 's/+//' | sed 's/C$//')
NUMLOCK=$(xset q | awk '/Num Lock/ {print $8}')

case $NUMLOCK in
    on)
        icon='🔒'
        ;;
    off)
        icon='👐'
        ;;
esac

echo "🔥C:$CPU/G:$GPU $icon"
