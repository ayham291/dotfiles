#!/bin/sh



onescreen() { # If only one output available or chosen.
	xrandr --output "$1" --auto --scale 1.0x1.0 $(echo "$allposs" | grep -v "\b$1" | awk '{print "--output", $1, "--off"}' | paste -sd ' ' -)
	}


allposs=$(xrandr -q | grep "connected")
screens=$(echo "$allposs" | awk '/ connected/ {print $1}')
MODE="$(optimus-manager --status | awk '/mode :/ {print $5}')"

[ "$(echo "$screens" | wc -l)" -lt 2 ] &&
	{ onescreen "$screens";}


[[ $MODE == "nvidia" ]] && xrandr --output eDP-1-1 --mode 1920x1080 --pos 0x1200 --auto --output DP-1-1 --primary --mode 1920x1200 --pos 0x0 --auto --output DP-1-3 --mode 1280x1024 --rate 60 --pos 1920x701 && echo "NVIDIA"
[[ $MODE == "integrated" ]] && xrandr --output eDP-1 --mode 1920x1080 --pos 0x1200 --auto --output DP-1 --primary --mode 1920x1200 --pos 0x0 --auto --output DP-3 --mode 1280x1024 --rate 60 --pos 1920x701 && echo "INEL"
[[ $MODE == "hybrid" ]] && xrandr --output eDP-1 --mode 1920x1080 --pos 0x1200 --auto --output DP-1 --primary --mode 1920x1200 --pos 0x0 --auto --output DP-3 --mode 1280x1024 --rate 60 --pos 1920x701 && echo "HYBRID"
